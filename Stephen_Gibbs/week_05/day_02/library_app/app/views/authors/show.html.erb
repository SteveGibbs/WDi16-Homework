<h1>Individual authors</h1>

<ul>
<p>Name: <%= @author.name %></p>

<p>Nationality: <%= @author.nationality %></p>

<p>Date of Birth: <%= @author.dob %></p>

<p>Genre: <%= @author.genre %></p>

</ul>

<div class="controls">

<%= link_to "Edit #{@author.name}", "/authors/#{@author.id}/edit" %>
<%= link_to "Delete #{@author.name}", "/authors/#{@author.id}", :method => :delete, :data => {:confirm => "Are you sure?"} %>

</div>

<hr>

<h2>Books</h2>

<% @author.books.each do |b| %>
<li><%= link_to(b.title, "/books/#{b.id}")%></li>
<% end %>
