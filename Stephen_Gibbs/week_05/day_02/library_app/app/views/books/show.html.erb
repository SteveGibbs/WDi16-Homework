<h1><%= @book.title %></h1>

<ul>
<p>Title: <%= @book.title %></p>

<p>Year: <%= @book.year %></p>

<p>Genre: <%= @book.genre %></p>

<p>Synopsis: <%= @book.synopsis %></p>

</ul>

<div class="controls">

<%= link_to "Edit #{@book.title}", "/books/#{@book.id}/edit" %>
<%= link_to "Delete #{@book.title}", "/books/#{@book.id}", :method => :delete, :data => {:confirm => "Are you sure?"} %>

</div>
